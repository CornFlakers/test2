@model MvcMovie.Models.AccountViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h2>Welcome to MyBillBuddy</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Home" asp-action="Index" method="get">
    <p>
        <select asp-for="transType" asp-items="@new SelectList(Model.transTypes)">
            <option value="">All</option>
        </select>

        Description: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
    <br />
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="userAccount.StartingBalance" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="text" name="StartingBalance" class="form-control" />
            </div>
        </div>
    </div>
    <input type="submit" value="Set" />
</form>

@Html.DisplayNameFor(model => model.userAccount.ProjectedBalance)
@Html.DisplayFor(model => model.userAccount.ProjectedBalance)

<br />

@Html.DisplayNameFor(model => model.userAccount.StartingBalance)
@Html.DisplayFor(model => model.userAccount.StartingBalance)

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.lstTransactions[0].description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lstTransactions[0].value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lstTransactions[0].transDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.lstTransactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td class="@(item.transType == MvcMovie.Data.enumTransType.Expense || item.transType == MvcMovie.Data.enumTransType.OneTimeExpense ? "text-danger" : "")">
                    @Html.DisplayFor(modelItem => item.value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.transDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>